# Admin Configuration
ADMIN_MASTER_PASSWORD=Admin123!@#ChangeThis

# Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Application Settings
FALLBACK_AUTH_ENABLED=True
